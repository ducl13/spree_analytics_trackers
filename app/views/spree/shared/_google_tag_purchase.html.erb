<% if order_just_completed?(@order) && Rails.configuration.x.trackers.ga_tag_confirmation.present? %>
<!-- Event snippet for Confirmation Page conversion page -->
<script>
  gtag('event', 'conversion', {
    'send_to': '<%= Rails.configuration.x.trackers.ga_tag_confirmation %>',
    'value': <%= @order.total %>,
    'currency': 'USD',
    'transaction_id': '<%= @order.number %>'
  });
</script>
<% end %>
